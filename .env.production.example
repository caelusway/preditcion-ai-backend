# Database Configuration (use your cloud PostgreSQL connection string)
DATABASE_URL=postgresql://user:password@host:port/database

# Application
PORT=3000

# JWT Authentication (REQUIRED - Generate strong secrets!)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d

# CORS - comma-separated origins
CORS_ORIGINS=http://localhost:19000,http://localhost:8081,https://yourdomain.com

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_PROVIDER=resend
# Get your API key from: https://resend.com
RESEND_API_KEY=re_your_resend_api_key

# API-Football v3 (REQUIRED)
# Subscribe at: https://rapidapi.com/api-sports/api/api-football
RAPIDAPI_KEY=your-rapidapi-key-here
FOOTBALL_DATA_SOURCE=api

# Rate Limiting (requests per 10 minutes)
AUTH_RATE_LIMIT=50
GENERAL_RATE_LIMIT=300
