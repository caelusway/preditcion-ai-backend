# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://football:devpassword@localhost:5432/football_predictions

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d

# CORS - comma-separated origins
CORS_ORIGINS=http://localhost:19000,http://localhost:8081,http://localhost:3000

# Email
EMAIL_FROM=noreply@yourdomain.com
EMAIL_PROVIDER=console
# For production, use 'resend' and set RESEND_API_KEY
RESEND_API_KEY=

# RapidAPI Football Data (API-Football v3)
# Subscribe at: https://rapidapi.com/api-sports/api/api-football
# Free tier: 100 requests/day
RAPIDAPI_KEY=your-rapidapi-key-here
FOOTBALL_DATA_SOURCE=dummy  # dummy or api

# Rate Limiting (requests per 10 minutes)
AUTH_RATE_LIMIT=50
GENERAL_RATE_LIMIT=300
